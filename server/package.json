{
  "name": "ingredientory-server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development IN_MEMORY_DB=true nodemon src/server.ts",
    "dev:docker": "cross-env NODE_ENV=development MONGO_URI=mongodb://admin:password@localhost:27017/?authSource=admin nodemon src/server.ts",
    "build": "rimraf build/* && tsc --project tsconfig.prod.json",
    "prod": "cross-env NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "mongoose": "^5.10.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.10",
    "mongodb-memory-server": "^6.9.2",
    "nodemon": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ext": "ts",
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "eqeqeq": "warn",
      "semi": "warn",
      "no-unused-vars": "off"
    }
  }
}
