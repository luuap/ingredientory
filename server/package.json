{
  "name": "ingredientory-server",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r ./src/start-dev-server.ts src/server.ts",
    "dev:api-only": "docker-compose -f docker-compose.stage.yml --env-file ./.env.stage up -d db && cross-env NODE_ENV=development nodemon src/server.ts && yarn clean-docker",
    "build": "rimraf build/* && tsc --project tsconfig.prod.json",
    "stage": "yarn build && docker-compose -f docker-compose.yml -f docker-compose.stage.yml --env-file ./.env.stage up -d && yarn clean-docker",
    "stage:api-only": "yarn build && cross-env NODE_ENV=production node -r dotenv/config build/server.js",
    "clean-docker": "docker image prune -f && docker volume prune -f"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.10",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "mongodb-memory-server": "^6.9.2",
    "nodemon": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ext": "ts",
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "eqeqeq": "warn",
      "semi": "warn",
      "no-unused-vars": "off"
    }
  }
}
